BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: ''
            multiline: False
            on_text: app.handle_calculation(self.text)
        BoxLayout:
            size_hint_x: 0.2
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
#        on_press: app.handle_calculation(user_input.text)
    Label:
        text: app.message
        font_size: 50
        color: "yellow"